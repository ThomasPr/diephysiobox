%main#home{role: "main"}



  .container

    #carouselExampleIndicators.carousel.slide{"data-ride" => "carousel"}
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#carouselExampleIndicators"}
        %li{"data-slide-to" => "1", "data-target" => "#carouselExampleIndicators"}
        %li{"data-slide-to" => "2", "data-target" => "#carouselExampleIndicators"}
        %li{"data-slide-to" => "3", "data-target" => "#carouselExampleIndicators"}
        %li{"data-slide-to" => "4", "data-target" => "#carouselExampleIndicators"}
      .carousel-inner
        .carousel-item.active
          = render "picture", image: "slider/slider1.jpg", sizes: [1110, 930, 690, 510]
        .carousel-item
          = render "picture", image: "slider/slider2.jpg", sizes: [1110, 930, 690, 510]
        .carousel-item
          = render "picture", image: "slider/slider3.jpg", sizes: [1110, 930, 690, 510]
        .carousel-item
          = render "picture", image: "slider/slider4.jpg", sizes: [1110, 930, 690, 510]
        .carousel-item
          = render "picture", image: "slider/slider5.jpg", sizes: [1110, 930, 690, 510]
      %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleIndicators", :role => "button"}
        %span.carousel-control-prev-icon{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleIndicators", :role => "button"}
        %span.carousel-control-next-icon{"aria-hidden" => "true"}
        %span.sr-only Next


